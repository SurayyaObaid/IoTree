<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Registration">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/bg_third"
        android:layout_marginTop="-20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-130dp"
        android:paddingTop="50dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:paddingBottom="30dp"
        android:paddingLeft="5dp"
        android:background="@drawable/greyroundbg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Yourself"
            android:layout_gravity="center"
            android:textColor="#008000"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            >

            <EditText
                android:id="@+id/fName"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:hint="First Name"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:inputType="textPersonName"
                android:background="@drawable/whiteround"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/lName"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteround"
                android:hint="Last Name"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="37dp"
            android:background="@drawable/whiteround"
            android:hint="Your Email"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="37dp"
                android:background="@drawable/whiteround"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginVertical="5dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <!--    <EditText
                    android:id="@+id/cpassword"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/simple_radius"
                    android:layout_margin="10dp"
                    android:inputType="textPassword"
                    />-->
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/MainActivityLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAllCaps="true"
        android:layout_marginHorizontal="60dp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_color_btn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account?"
        android:textColor="#008000"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/login_Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#008000"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="210dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        />
</LinearLayout>